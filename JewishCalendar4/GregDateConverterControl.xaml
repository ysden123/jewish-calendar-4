<UserControl x:Class="StulSoft.JewishCalendar4.GregDateConverterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JewishCalendar4"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Margin="5,5,5,5">Грегорианская дата (yyyy-mm-dd): </Label>
        <TextBox x:Name="GregDate" Width="150" Margin="5,5,5,5"/>
        <Button x:Name="ConvertDateButton" Margin="5,5,5,5" Cursor="Hand" Click="ConvertDateButton_Click">Convert</Button>
        <TextBox x:Name="HebDate" Width="250" Margin="5,5,5,5"/>
    </StackPanel>
</UserControl>
